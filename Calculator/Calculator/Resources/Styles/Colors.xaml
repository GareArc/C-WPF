<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Calculator">

    <Color x:Key="BlueVeryLight">#DDF7FF</Color>
    <SolidColorBrush x:Key="BlueVeryLightBrush" Color="{StaticResource BlueVeryLight}"/>

    <Color x:Key="BlueDark">#3556FC</Color>
    <SolidColorBrush x:Key="BlueDarkBrush" Color="{StaticResource BlueDark}"/>

    <Color x:Key="GrayVeryLight">#EBEBEB</Color>
    <SolidColorBrush x:Key="GrayVeryLightBrush" Color="{StaticResource GrayVeryLight}"/>

    <Color x:Key="BlueLight">#79C5F7</Color>
    <SolidColorBrush x:Key="BlueLightBrush" Color="{StaticResource BlueLight}"/>

    <Color x:Key="ButtonBlue">#A4D8FC</Color>
    <SolidColorBrush x:Key="ButtonBlueBrush" Color="{StaticResource ButtonBlue}"/>

</ResourceDictionary>